<Window x:Class="Blackjack.Submit"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Submit your score!" Height="100" Width="300" Background="GhostWhite" ResizeMode="NoResize">
    <Grid Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition Height="3*" />
            <RowDefinition Height="0.5*" />
            <RowDefinition Height="3*" />
        </Grid.RowDefinitions>
        <TextBox Name="TxtName" Grid.Row="0" 
                 VerticalContentAlignment="Center" VerticalScrollBarVisibility="Disabled" 
                 Margin="3,0" />
        <Button Grid.Row="2" Content="Submit" 
                HorizontalAlignment="Right" MinWidth="80" Margin="3,2" 
                Background="Gainsboro" Click="ButtonBase_OnClick" IsDefault="True" />
    </Grid>
</Window>
